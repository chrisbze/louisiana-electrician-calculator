// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id                Int      @id @default(autoincrement())
  name              String
  description       String?
  basePrice         Float
  category          String   // Residential, Commercial, Emergency
  serviceType       String   @default("Installation") // Installation, Repair, Inspection, Upgrade
  duration          Int      // Duration in minutes
  materialCost      Float?   // Estimated material cost
  laborRate         Float?   // Per hour labor rate
  minimumCharge     Float?   // Minimum service charge
  requiresPermit    Boolean  @default(false)
  permitCost        Float?   // Permit cost if required
  difficultyLevel   String   @default("Standard") // Easy, Standard, Complex
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("services")
}

model Quote {
  id                Int      @id @default(autoincrement())
  customerName      String
  customerEmail     String
  customerPhone     String?
  customerAddress   String?  // Property address for electrical work
  propertyType      String?  // Residential, Commercial, Industrial  
  services          String   // JSON string of selected services
  subtotal          Float
  materialsCost     Float    @default(0)
  laborCost         Float    @default(0)
  permitCost        Float    @default(0)
  discount          Float    @default(0)
  total             Float
  estimatedDuration Int      // Total duration in minutes
  emergencyService  Boolean  @default(false)
  scheduledDate     DateTime?
  notes             String?  // Special requirements or notes
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("quotes")
}